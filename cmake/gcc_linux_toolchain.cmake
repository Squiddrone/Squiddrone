set(CMAKE_SYSTEM_NAME Generic)
set(CMAKE_SYSTEM_VERSION 1)
set(CMAKE_SYSTEM_PROCESSOR Linux)

set(CMAKE_C_COMPILER gcc)
set(CMAKE_CXX_COMPILER g++)
set(CMAKE_ASM_COMPILER gcc)
set(CMAKE_OBJCOPY objcopy)
set(CMAKE_OBJDUMP objdump)

set(CMAKE_CXX_STANDARD 14)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

set(SHARED_FLAGS "-g3")
set(ADDITIONAL_SHARED_COMPILE_FLAGS "-O0 -Wall")

set(ADDITIONAL_LINK_FLAGS "")

set(CMAKE_C_STANDARD 11)
set(CMAKE_CXX_STANDARD 14)

set(CMAKE_EXE_LINKER_FLAGS "${ADDITIONAL_LINK_FLAGS}" CACHE INTERNAL "linker flags")
set(CMAKE_C_FLAGS "${SHARED_FLAGS} ${ADDITIONAL_SHARED_COMPILE_FLAGS}" CACHE INTERNAL "C flags")
set(CMAKE_CXX_FLAGS "${SHARED_FLAGS} ${ADDITIONAL_SHARED_COMPILE_FLAGS}" CACHE INTERNAL "C++ flags")
set(CMAKE_ASM_FLAGS "${SHARED_FLAGS} " CACHE INTERNAL "Assembler flags")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)

set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
